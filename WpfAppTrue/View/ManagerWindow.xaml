        <Button Content="New requests" HorizontalAlignment="Left" Margin="0,207,0,0" VerticalAlignment="Top" Width="136" Height="37" Click="NewRequest_Click"/>
        <Button Content="validate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"  Margin="177,389,0,0" Click="Validate_Click" />
        <Button Content="Reject" HorizontalAlignment="Left" Margin="281,389,0,0" VerticalAlignment="Top" Width="75" Click="Reject_Click"/>
        <DataGrid Name="UserAproval" Height="374" Margin="136,0,0,45" VerticalAlignment="Bottom">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Selection" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
